<Window x:Class="NET_DZ_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NET_DZ_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="IP :" />
            <TextBox x:Name="textBoxIP" Width="200"/>
            <TextBlock Text="Port:" Margin="0,10,0,0"/>
            <TextBox x:Name="PortTextBox" Width="200"/>
            <TextBlock Text="Message:" Margin="0,10,0,0"/>
            <TextBox x:Name="MessageTextBox" Width="200"/>
            <Button Content="Send Message" Click="SendMessageButton_Click" Margin="0,10,0,0" Width="200"/>

            <TextBlock x:Name="TBResponse"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
